{
  "name": "ans-core",
  "version": "0.1.0",
  "description": "Core types, crypto, and validation for the Agent Name Service (ANS)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "@noble/hashes": "^1.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsup": "^8.0.0",
    "vitest": "^1.2.0"
  }
}
